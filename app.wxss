/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.container::after {
    content: '';
    display: block;
    position: fixed;
    width: 100%;
    bottom: 0rpx;
    left: 0;
    z-index: 999;
    border-bottom: 1px solid #eee;
}

.clearfix {
  zoom:1;
}
.clearfix::after {
    display:block;
    clear:both;
    content:"";
    visibility:hidden;
    height:0;
}

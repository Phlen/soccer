
.container {
}
.main {
    width: 730rpx;
    margin: 0 auto;
}
.header {
    width: 100%;
    height: 70rpx;
    border-bottom: 1px solid #06b995;
    color: #06b995;
    font-size: 48rpx;
    font-weight: 700;
}

.mvp {
    padding-top: 15rpx;
}
.mvp-des {
    font-size: 28rpx;
    padding-top: 30rpx;
    font-weight: normal;
}

.article-title {
    margin-top: 40rpx;
    font-size: 48rpx;
    line-height: 1.5;
    color: #333;
}
.article-meta--info {
    display: inline-block;
    font-size: 24rpx;
    line-height: 24rpx;
    color: #ccc;
    margin-left: 30rpx;
}
.author {
    color: #06b995;
    margin-left: 0
}
.communications {
    margin-left: 0;
}

/*文章内容*/
.content {
    width: 100%;
}
.content-text {
    font-size: 28rpx;
    color: #333;
    line-height: 1.5;
}
.media {
    width: 100%;
    height: auto;
    margin-top: 20rpx;
}

/*预览*/
.swiper-container {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
}

.swiper-container image {
  width: 100%;
  height: 100%;
}
.footer {
    width: 100%;
}

.footer-text {
    display: block;
    font-size: 24rpx;
    color: #06b995;
}
.footer-text--des {
    display: block;
    font-size: 24rpx;
    color: #ccc;
    margin: 15rpx 0 30rpx 0;
}

.communications-box {
    width: 100%;
}
.good-communications {
    width: 100%;
    height: 40rpx;
    background-color: #ccc;
    font-size: 24rpx;
    line-height: 40rpx;
    color: #333;
}
.good-communications .text {
    padding-left: 10rpx;
}

.communication-item {
    width: 100%;
    margin: 20rpx 0 20rpx 0;
    border-bottom: 1px solid #eee;
}

.item-header {
    width: 100%;
}
.user-avatar {
    display: inline-block;
}
.user-avatar image {
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
}
.user-name {
    display: inline-block;
    font-size: 22rpx;
    color: #ccc;
    margin-left: 20rpx;
    margin-top: 0;
}
.user-name text {
    display: block;
}
.user-info .user-nickName {
    color: #06b995;
    font-size: 24rpx;
}
.user-info .post-time {
    margin-top: 10rpx;
}
.approval {
    margin-top: 20rpx;
}
.approval-num {
    display: inline-block;    
    font-size: 24rpx;
    color: #ccc;
    margin-right: 10rpx;
}

.approval-icon {
    display: inline-block;
    width: 30rpx;
    height: 30rpx;
    background: url('../../images/icons/approvalHL.png') no-repeat center;
    background-size: cover;
}

.communication-cont {
    margin: 20rpx 0;
    font-size: 28rpx;
    color: #333;
    line-height: 1.5;
}



